@model PasswordResetModel

<div id="ResetPasswordModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ResetPasswordHeader">Modal Header</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="ResetPasswordBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" id="PasswordResetConfirmButton">OK</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div class="form-centered">
    <div>
        <div class="form-left-align">
            <h4>Reset your password</h4>
        </div>

        <div asp-validation-summary="All" class="form-left-align text-danger"></div>

        <div class="form-left-align">
            <form>
                <div class="form-group">
                    Here you can send request to reset your password. If you fill the form,
                    and press "Send" button, we will send you an email with reset code. You
                    will need to use this code to reset password.
                </div>
                <div class="form-group">
                    Once we send you the email, you will have @Model.Hours hours to enter
                    the code, and you will have @Model.Attempts attempts to do it properly.
                    Otherwise you will need to make another request.
                </div>
                <div class="form-group">
                    <label>Your email address</label>
                    <input asp-for="EmailAddress" type="email" class="form-control" />
                </div>
                <button type="button" class="btn btn-dark text-white" id="SendButton">Send</button>
                <button type="button" class="btn btn-secondary text-white" id="AlreadyButton">Already have code</button>
                <a type="button" class="btn btn-secondary text-white" asp-action="Index" asp-controller="Home">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <environment names="Development">
        <script src="~/JS/ResetPassword.js" asp-append-version="true"></script>
    </environment>
    <environment names="Production">
        <script src="~/JS/ResetPassword.min.js" asp-append-version="true"></script>
    </environment>
}