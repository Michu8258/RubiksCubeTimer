@model UserSelfModifViewModel

@await Component.InvokeAsync("Sidebar", new SidebarViewModel())

<div class="page-content">
    <div class="content-margin-sidebar">
        <div class="col-4 offset-4">
            <h4>Modify your account data</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="ModifyAccount" method="post">
                <input type="hidden" readonly asp-for="UserIdentity" />
                <div class="form-group">
                    <label asp-for="UserName">User name</label>
                    <input asp-for="UserName" class="form-control" value="@Model.UserName" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone number</label>
                    <input asp-for="PhoneNumber" type="number" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Current password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword">New password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword2">Confirm new password</label>
                    <input asp-for="NewPassword2" type="password" class="form-control" />
                </div>
                <div class="text-warning">
                    1. If you do not want to change password, leave pasword fields empty.
                </div>
                <div class="text-warning">
                    2. If you do not want to change your phone number, leave phone number field empty.
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-sm btn-dark text-white">Accept changes</button>
                    <a asp-action="Account" asp-controller="User" asp-route-id="@Model.UserIdentity"
                       class="btn btn-sm btn-secondary text-white">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <environment names="Development">
        <script src="~/JS/Sidebar.js" asp-append-version="true"></script>
    </environment>
    <environment names="Production">
        <script src="~/JS/Sidebar.min.js" asp-append-version="true"></script>
    </environment>
}
