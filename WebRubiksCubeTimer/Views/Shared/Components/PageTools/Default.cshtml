@model PageToolsViewModel

<div class="accordion py-2">
    <div>
        <div class="my-0 py-0 d-flex flex-column" id="ToolsContainer">
            @if (Model.ToolsVisible)
            {
                <h5 class="mt-3 mb-1" id="ToolsHeader">Tools</h5>
                @foreach (var menu in Model.Menus)
                {
                    @if (menu.Value)
                    {
                        <button class="btn btn-sm bg-light d-flex flex-column my-1 py-1 text-left"
                                id="@string.Format("{0}ToolsButton", menu.Key)">
                                @menu.Key.Replace('_', ' ')
                        </button>
                    }
                }
            }
        </div>
    </div>
</div>